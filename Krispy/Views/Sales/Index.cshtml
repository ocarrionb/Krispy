@model Krispy.Models.Sales

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Welcome to the online store.</h1>

<p>
    <a asp-action="TotalSales">View all sales.</a>
</p>

<p>
    <a asp-action="Create">Create new order.</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label><br>
                @Html.DropDownList("dropDonuts", (IEnumerable<SelectListItem>)ViewBag.data, "Select donut", "Name")
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}